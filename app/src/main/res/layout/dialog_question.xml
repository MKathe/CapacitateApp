<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_centerInParent="true"
        android:id="@+id/body_question"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Finalizaste el capítulo"
                android:textColor="@color/dark_gray"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="TÍTULO DEL PRIMER CAPÍTULO"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/amber"
                app:cardCornerRadius="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_lightbulb_outline"
                            android:tint="@color/white" />

                        <TextView
                            android:id="@+id/tv_light_bulb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="33.5%"
                            android:textColor="@color/white"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="ENTENDIMIENTO"
                        android:textStyle="bold" />
                </LinearLayout>


            </android.support.v7.widget.CardView>
            <LinearLayout
                android:id="@+id/toolbar"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content">
                <Button
                    android:layout_margin="10dp"
                    android:text="Volver"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_width="1dp"
                    android:background="@drawable/button_square_border_thie"
                    android:layout_height="match_parent" />
                <Button
                    android:layout_margin="10dp"
                    android:text="Continuar"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:layout_width="1dp"
                    android:background="@drawable/button_square_border"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>